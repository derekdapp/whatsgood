<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<ul>
  <li>Type: <%= @event.event_type %></li>
  <li>Genre: <%= @event.genre %></li>
  <li>Start Time: <%= @event.start_time %></li>
  <li>Runtime: <%= @event.runtime %></li>
  <li>Website: <%= @event.website %></li>
</ul>

<%= link_to 'Events', events_path %>
<%= link_to 'Edit', edit_event_path %>
<%= link_to 'Delete', @event, method: :delete, data: {confirm: 'You sure?'} %>
<%= link_to 'New Event', new_event_path %>
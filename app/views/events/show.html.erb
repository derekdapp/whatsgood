<h1><%= @event.name %></h1>
<p><%= @event.description %></p>

<%= image_tag @event.image_url, class: 'img img-responsive', alt: 'No Image' %>


<ul>
  <li>Category: <%= @event.category %></li>
  <li>Start Time: <%= @event.start_time %></li>
  <li>Stop Time: <%= @event.stop_time %></li>
  <li>Venue name: <%= @event.venue_name %></li>
  <li>Venue Address: <%= @event.venue_address %></li>
  <li>City name: <%= @event.city_name %></li>
</ul>

<%= link_to 'Events', events_path %>
<%= link_to 'Edit', edit_event_path %>
<%= link_to 'Delete', @event, method: :delete, data: {confirm: 'You sure?'} %>
<%= simple_form_for @event, html: { role: 'form'} do |f| %>
  <%= f.input :name, value: params[:name], placeholder: 'Name', label: false %>
  <%= f.input :description, value: params[:description], placeholder: 'Description', label: false %>
  <%= f.input :event_type, placeholder: 'Type', label: false %>
  <%= f.input :genre, placeholder: 'Genre', label: false %>
  <%= f.input :start_time, placeholder: 'Start time', label: false %>
  <%= f.input :runtime, placeholder: 'Runtime', label: false %>
  <%= f.input :website, placeholder: 'Website', label: false %>
  <%= f.button :submit %>
<% end %>

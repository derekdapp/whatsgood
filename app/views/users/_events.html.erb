<div id="grid" class="row-fluid">
<% @events.each do |event| %>
  <div class="col-sm-6 col-lg-4 event-item" data-groups='["photography"]' id=<%event['id']%>> 
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <button type="button" class="close card-close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h3 class="panel-title">
          <%= link_to (sanitize event['title']), event['url'] %>
        </h3>
      </div>
      <div class="list-group">
        <div class="list-group-item">
          <% if event['image'] %>
            <% image_url = event['image']['perspectivecrop290by250']['url']%>
            <div class="event-image"><%= image_tag(event['image']['perspectivecrop290by250']['url'], class: "img-responsive", :alt => 'Image missing') %></div>
          <% else %>
          <% image_url = 'none' %>  
          <% end %>  
        </div>
        <div class="list-group-item">
          <% if event['stop_time'] %>
          <div class="card-date"><%= event['start_time'].localtime("-00:00").strftime("%b %d") %> - 
          <%= event['stop_time'].localtime("-00:00").strftime("%b %d") %></div>
          <% else %>
            <div class="card-date"><%= event['start_time'].localtime("-00:00").strftime("%a, %B %d, %l:%M %p") %></div>
          <% end %>
          <%= sanitize event['venue_name'] %><br>
          <%= sanitize event['venue_address'] %><br>
          <%= sanitize event['city_name'] %><br>
        </div>
        <div class="list-group-item event-description">
          <h4 class="event-description-button">Description</h4>
          <div class="event-description-body">
            <% if event['description'] %>
              <p class="list-group-item-text"><%= sanitize event['description']%></p>
            <% else %>
              <p class="list-group-item-text">No Description for this event</p>  
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-group btn-group-justified pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-danger card-close"><i class="fa fa-close"></i>Close</button>
          </div>
          <div class="btn-group">
            <% if current_user %>
              <%= link_to new_user_event_path(current_user, 
                                        name: event['title'],
                                         description: event['description'],
                                         image_url: image_url,
                                         start_time: event['start_time'],
                                         stop_time: event['stop_time'],
                                         venue_address: event['venue_address'],
                                         city_name: event['city_name'],
                                         venue_name: event['venue_name']), class: "btn btn-primary" do %>
                <i class="fa fa-star"> Favorite</i>
              <% end %>
            <% else %>
                 <%= link_to new_user_session_path, class: "btn btn-primary" do %>
                  <i class="fa fa-star"> Favorite</i>
              <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
</div>


    
      
    



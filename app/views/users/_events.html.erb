<% @events.each do |event| %>
  <div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left"><%= link_to (sanitize event['title']), event['url'] %></h3>
      <div class="btn-group pull-right">
        <button type="button" class="btn btn-danger"><i class="fa fa-close"></i>Close</button>
        <button type="button" class="btn btn-success"><i class="fa fa-star"></i>Favorite</button>
      </div>
    </div>
    <div class="list-group">
      <div class="list-group-item">
        <h3><%= event['start_time'].localtime("-00:00").strftime("%A, %b %d, %l:%M %p") %></h3>
        <p><%= sanitize event['venue_name'] %></p>
        <p><%= sanitize event['venue_address'] %></p>
        <p><%= sanitize event['city_name'] %></p>
      </div>
      <div class="list-group-item">
        <% if event['image'] %>
          <div class="event-image"><%= image_tag(event['image']['large']['url'], class: "img-responsive", :alt => 'Image missing') %></div>
        <% end %>  
      </div>
      <div class="list-group-item">
        <p class="list-group-item-text"><%= sanitize event['description'] %></p>
      </div>
    </div>
  <div class="panel-footer">
    <small><%= link_to 'Link', event['url'] %></p></small>
  </div>
</div>
<% end %>


    
      
    



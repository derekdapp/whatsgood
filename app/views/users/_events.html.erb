<% @events.in_groups_of(4, true).each do |group| %>
  <div class="row">
  <% group.each do |event| %>
    <% if event['start_time'] >= Time.now %>
    <div class='col-md-3'>
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <div class="panel-title pull-left"><h3><%= link_to (sanitize event['title']), event['url'] %></h3>
          </div>
        </div>
        <div class="list-group">
          <div class="list-group-item">
            <h3><%= event['start_time'].localtime("-00:00").strftime("%A, %b %d, %l:%M %p") %></h3>
            <p><%= sanitize event['venue_name'] %></p>
            <p><%= sanitize event['venue_address'] %></p>
            <p><%= sanitize event['city_name'] %></p>
          </div>
          <div class="list-group-item">
            <% if event['image'] %>
              <div class="event-image"><%= image_tag(event['image']['large']['url'], class: "img-responsive", :alt => 'Image missing') %></div>
            <% end %>  
          </div>
          <div class="list-group-item">
            <% if event['description'] %>
              <p class="list-group-item-text"><%=truncate(event['description'], :length => 240, :omission => (link_to " ... (read more)",event['url'])  , :escape => false)%></p>
            <% else %>
              <p class="list-group-item-text">No Description Available</p>
            <% end %>
          </div>
        </div>
        <div class="panel-footer">
          <div class="btn-group pull-right">
            <button type="button" class="btn btn-danger"><i class="fa fa-close"></i>Close</button>
            <button type="button" class="btn btn-success"><i class="fa fa-star"></i>Favorite</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  
  <% end %>
  </div>
<% end %>

    
      
    


